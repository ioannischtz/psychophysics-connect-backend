{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server for the `remote-timbre-experiment` app, using: Nodejs - Expressjs - MongoDB/Mongoose, JWT authentication.",
  "main": "server.js",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "start:dev": "tsx watch src/server.ts",
    "serve": "node -r dotenv/config build/src/server.js",
    "build": "npm run clean && npm run build-ts",
    "watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/src/server.js",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.ts",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui --coverage"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "jwt",
    "audio-streaming"
  ],
  "author": "Ion-Hz",
  "license": "GPL-2.0",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bytes": "^3.1.2",
    "compressible": "^2.0.18",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "deepmerge-ts": "^5.1.0",
    "error": "^10.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "gridfs-stream": "^1.1.1",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "mime-types": "^2.1.35",
    "mongoose": "^7.4.5",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.15.0",
    "pino-http": "^8.4.0",
    "rate-limiter-flexible": "^2.4.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bytes": "^3.1.1",
    "@types/compressible": "^2.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.36",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.6",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2",
    "vite-require": "^0.2.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  }
}
