{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server for the `remote-timbre-experiment` app, using: Nodejs - Expressjs - MongoDB/Mongoose, JWT authentication.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/src/server.js",
    "build": "npm run clean && npm run build-ts",
    "watch": "npx concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/src/server.js",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.ts",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "jwt",
    "audio-streaming"
  ],
  "author": "Ion-Hz",
  "license": "GPL-2.0",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bytes": "^3.1.2",
    "compressible": "^2.0.18",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "deepmerge-ts": "^5.1.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "gridfs-stream": "^1.1.1",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "mime-types": "^2.1.35",
    "mongoose": "^7.3.4",
    "multer": "^1.4.5-lts.1",
    "pino-http": "^8.3.3",
    "rate-limiter-flexible": "^2.4.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bytes": "^3.1.1",
    "@types/compressible": "^2.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "mockingoose": "^2.16.2",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
